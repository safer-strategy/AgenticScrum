[package]
name = "{{ project_name|lower|replace(' ', '-') }}"
version = "0.1.0"
edition = "2021"
description = "{{ project_name }} - An AgenticScrum-powered Rust project"
authors = ["Your Name <your.email@example.com>"]

[dependencies]
# Add your project dependencies here
